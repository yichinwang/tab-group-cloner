{
  "manifest_version": 3,
  "name": "Tab Group Receiver",
  "version": "1.0.0",
  "description": "Receives tab groups from Chrome and creates them in Sidekick",
  "permissions": [
    "tabs",
    "tabGroups"
  ],
  "host_permissions": [
    "http://127.0.0.1:8765/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
