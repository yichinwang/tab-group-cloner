{
  "manifest_version": 3,
  "name": "Tab Group Cloner",
  "version": "1.0.0",
  "description": "Clone all tab groups from Chrome to Sidekick browser with one click",
  "permissions": [
    "tabs",
    "tabGroups",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
